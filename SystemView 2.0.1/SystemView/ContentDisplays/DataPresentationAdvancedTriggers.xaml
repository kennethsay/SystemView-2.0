<UserControl x:Class="SystemView.ContentDisplays.DataPresentationAdvancedTriggers"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SystemView.ContentDisplays"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10 0 0">
            <Button Content="Activate All" Width="100" Margin="0 0 10 0"/>
            <Button Content="Clear All" Width="100"/>
        </StackPanel>
        <ScrollViewer Height="300" Width="250" Margin="0 10 0 0">
            <StackPanel x:Name="AdvancedTriggerPanel" Margin="0 0 0 0" HorizontalAlignment="Center"/>
        </ScrollViewer>
    </StackPanel>

</UserControl>
