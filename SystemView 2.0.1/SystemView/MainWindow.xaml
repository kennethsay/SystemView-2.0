                                    <StackPanel VerticalAlignment="Stretch">                                   

                                        <telerik:RadTileView Margin="10 0 0 0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalContentAlignment="Top" RowsCount="2">
                                            <telerik:RadTileViewItem  Header="SYSTEMVIEW REV 0 - BETA" Margin="0 0 0 0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                                <ScrollViewer>
                                                    <StackPanel Orientation="Horizontal">
                                                        <StackPanel>
                                                            <Label Content="Build #: 0.00.0001, Date: 10/4/2019" FontFamily="Segoe UI Light" FontSize="20" Margin="5 0 0 0" FontWeight="ExtraBlack"/>
                                                            <TextBlock Text="Notes: SystemView Beta version. This is the first version of software to be made available for internal testing." FontFamily="Segoe UI Light" FontSize="20" Margin="10 5 0 0 " TextWrapping="Wrap" Width="400"/>
                                                        </StackPanel>
                                                    </StackPanel>
                                                </ScrollViewer>

                                            </telerik:RadTileViewItem>
                                            <telerik:RadTileViewItem Header="SYSTEMVIEW PRE-RELEASE DEVELOPMENT " Margin="0 30 0 0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" >
                                                <ScrollViewer>
                                                    <StackPanel Orientation="Horizontal">
